# Frontend Environment Configuration

# Application
VITE_APP_TITLE="Aetherius WebConsole"
VITE_APP_VERSION="2.0.0"
VITE_APP_DESCRIPTION="Enterprise Web Management Console"

# API Configuration
VITE_API_BASE_URL="http://localhost:8080"
VITE_WS_BASE_URL="ws://localhost:8080"
VITE_API_TIMEOUT=30000

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_HEARTBEAT_INTERVAL=30000

# Authentication
VITE_TOKEN_STORAGE_KEY="aetherius_token"
VITE_REFRESH_TOKEN_STORAGE_KEY="aetherius_refresh_token"
VITE_SESSION_TIMEOUT=3600000

# UI Configuration
VITE_DEFAULT_THEME="light"
VITE_DEFAULT_LOCALE="en"
VITE_DEFAULT_TIMEZONE="UTC"

# Feature Flags
VITE_FEATURE_DASHBOARD=true
VITE_FEATURE_CONSOLE=true
VITE_FEATURE_PLAYER_MANAGEMENT=true
VITE_FEATURE_FILE_MANAGER=true
VITE_FEATURE_PLUGIN_MANAGEMENT=true
VITE_FEATURE_BACKUP_SYSTEM=true
VITE_FEATURE_USER_MANAGEMENT=true
VITE_FEATURE_SYSTEM_CONFIG=true
VITE_FEATURE_MONITORING=true
VITE_FEATURE_API_MANAGEMENT=true

# Development
VITE_DEV_MOCK_API=false
VITE_DEV_SHOW_DEVTOOLS=true
VITE_DEV_ENABLE_LOGGER=true

# Performance
VITE_CHART_ANIMATION=true
VITE_VIRTUAL_SCROLL_THRESHOLD=100
VITE_DEBOUNCE_DELAY=300

# File Upload
VITE_MAX_FILE_SIZE=104857600
VITE_ALLOWED_FILE_TYPES=".txt,.yaml,.yml,.json,.properties,.cfg,.conf"

# PWA
VITE_PWA_ENABLED=true
VITE_PWA_UPDATE_AVAILABLE_MESSAGE="New version available!"

# Monitoring
VITE_SENTRY_DSN=""
VITE_ANALYTICS_ID=""